{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML -}}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {{- /* Alle regul√§ren Seiten dieses Sprach-Builds */ -}}
  {{- range .Site.RegularPages -}}
    {{- if partial "seo/is-indexable.html" . -}}
      {{- $canonical := partial "seo/canonical-url.html" . -}}
      <url>
        <loc>{{ $canonical }}</loc>
        {{- with .Lastmod -}}<lastmod>{{ .Format "2006-01-02T15:04:05Z07:00" }}</lastmod>{{- end -}}
        {{- /* Alternate hreflang-Links (falls mehrsprachig) */ -}}
        {{- with .AllTranslations -}}
          {{- range . -}}
            {{- if partial "seo/is-indexable.html" . -}}
              {{- $altCanonical := partial "seo/canonical-url.html" . -}}
              <xhtml:link rel="alternate" hreflang="{{ .Lang }}" href="{{ $altCanonical }}" />
            {{- end -}}
          {{- end -}}
        {{- end -}}
      </url>
    {{- end -}}
  {{- end -}}
</urlset>
